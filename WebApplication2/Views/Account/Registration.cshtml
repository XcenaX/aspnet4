@model WebApplication2.Models.RegistrationModel
@{
    ViewBag.Title = "RegistrationForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>
<hr />
<form method="post" action="/Account/Registration">
    <div class="form-group">
        <label for="exampleInputEmail1">Login</label>
        <input name="Username" class="form-control" placeholder="Login">
        @Html.ValidationMessageFor(model => model.Username)
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="Email" class="form-control" placeholder="E-mail">
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input name="Password" class="form-control" type="password" placeholder="Password">
        @Html.ValidationMessageFor(model => model.Password)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        <input name="PasswordConfirm" class="form-control" type="password" placeholder="Password">
        @Html.ValidationMessageFor(model => model.PasswordConfirm)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">BirthYear</label>
        <input name="BirthYear" class="form-control" type="number" placeholder="BirthYear">
        @Html.ValidationMessageFor(model => model.BirthYear)
    </div>
    <button type="submit" class="btn btn-primary">Registration</button>
</form>

